@model IEnumerable<GeneralStore.MVC.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Record a Transaction", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TransactionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPurchased)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfTransaction)
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelitem => item.TransactionID)
    </td>
    <td>
        @Html.DisplayFor(modelitem => item.ProductId)
    </td>
    <td>
        @Html.DisplayFor(modelitem => item.CustomerID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductPurchased)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOfTransaction)
    </td>
    <td>
        @Html.ActionLink("Change", "Edit", new { id = item.TransactionID})|
        @Html.ActionLink("More Info", "Details", new { id = item.TransactionID })|
        @Html.ActionLink("Remove", "Delete", new { id = item.TransactionID })
    </td>
</tr>
    }
</table>